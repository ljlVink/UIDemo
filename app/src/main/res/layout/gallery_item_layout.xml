<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_frame"
            android:layout_width="92dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery_frame"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_frame_light"
            android:layout_width="108dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery_frame_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/dark" />

        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/gallery_light"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_word_bg"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery_word"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_word_bg_light"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery_word_light"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_word_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            tools:text="watch" />
    </FrameLayout>
</LinearLayout>